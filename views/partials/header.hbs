<style>
    .header {
        background-color: var(--warning);
        color: var(--light);
        max-height: 8vh;
    }

    .header-title {
        font-size: 1.9rem;
        font-weight: 300;
        margin-left: 20%;
        margin-top: -20px;
    }

    @media only screen and (orientation: landscape) {
        .header {
            background-color: var(--warning);
            color: var(--light);
            max-height: 10vh;
        }
        .header-title {
            position: absolute;
            font-size: 2.8rem;
            font-weight: 300;
            left: 10%;
            top: 1px;
            margin-top: 0;
        }
    }
</style>


{{> nav }}
<header>
    <div class="header">
        <h1 class="header-title">{{ pageTitle }}</h1>
        {{#if headerMessage}}
        <p class="header-message">{{ headerMessage }}</p>
        {{/if}}
    </div>
</header>