<!DOCTYPE html>
<html lang="en">

<head>
  {{> head }}
</head>

<body>
  {{> header }}
  <div class="container">
    <form id="signinForm">
      <div class="form-group">
        <label for="emailIn">Email address</label>
        <input type="email" class="form-control" id="emailIn" aria-describedby="emailHelp" placeholder="Enter email" required>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="password-in">Password</label>
        <input type="password" class="form-control" id="passwordIn" placeholder="Password" required>
      </div>
      <button id="submitIn" type="submit" class="btn btn-warning">Sign In</button>
      <button type="button" id="signupButton" class="btn btn-outline-warning" data-toggle="modal" data-target="#signupModal">
        Sign-Up
      </button>
    </form>
    <p id="signinMessage" class="text-danger"></p>
  </div>

  <div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="container bg-dark">
          <form id="signupForm">
            <div class="form-group">
              <label for="email" class="text-light">Email address</label>
              <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" required>
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
              <label for="password" class="text-light">Password</label>
              <input type="password" class="form-control" id="password" placeholder="Password" required>
              <small id="passwordHelp" class="form-text text-muted">Atleast 4 characters.</small>
            </div>
            <div class="form-group">
              <label for="passwordConfirm" class="text-light">Confirm Password</label>
              <input type="password" class="form-control " id="passwordConfirm" placeholder="Confirm Password" required>
            </div>
            <div class="form-group">
              <label for="name" class="text-light">Name</label>
              <input type="text" class="form-control" id="name" placeholder="What do we call you?" required>
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <div class="input-group-text">
                  <input type="checkbox" aria-label="I'm not a robot" onchange="robotCheckChanged(this)">
                </div>
              </div>
              <input type="text" readonly class="form-control text-danger" aria-label="I'm not a robot" value="I'm not a robot">
            </div>
            <button id="signupSubmitButton" type="submit" disabled class="btn btn-warning">Submit</button>
          </form>
          <p id="signupMessage" class="text-danger"></p>
        </div>
      </div>
    </div>
  </div>
  {{> pagejs }}
</body>

</html>